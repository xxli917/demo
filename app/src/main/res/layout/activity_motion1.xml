<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">


    <Button
        android:id="@+id/set_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="114dp"
        android:text="设置优惠邀请"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/page_view"
        app:layout_constraintStart_toStartOf="@+id/page_view"
        app:layout_constraintTop_toBottomOf="@+id/bg_view" />

    <ImageView
        android:id="@+id/bg_view"
        android:layout_width="wrap_content"
        android:layout_height="667dp"
        android:scaleType="fitXY"
        android:text="设置优惠邀请"
        app:layout_constraintBottom_toTopOf="@+id/set_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_bg"
        tools:srcCompat="@mipmap/ic_bg" />

    <ImageView
        android:id="@+id/back_view"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_back" />

    <ImageView
        android:id="@+id/page_view"
        android:layout_width="0dp"
        android:layout_height="295dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="380dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_page" />

    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/page_view"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:srcCompat="@mipmap/ic_arrow" />

    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/arrow1"
        app:layout_constraintTop_toBottomOf="@+id/arrow1"
        app:srcCompat="@mipmap/ic_arrow"
        tools:srcCompat="@mipmap/ic_arrow" />

    <ImageView
        android:id="@+id/arrow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/arrow2"
        app:layout_constraintTop_toBottomOf="@+id/arrow2"
        app:srcCompat="@mipmap/ic_arrow" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        android:text="支持多种优惠价格方式"
        android:textColor="@color/black_051C3E"
        app:layout_constraintStart_toEndOf="@+id/arrow1"
        app:layout_constraintTop_toTopOf="@+id/page_view" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="仅对本次邀请有效"
        android:textColor="@color/black_051C3E"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="对方收到邀请后，将看到"
        android:textColor="@color/black_051C3E"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
    <Button
        android:id="@+id/invate_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="146dp"
        android:text="直接邀请"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/set_view"
        app:layout_constraintTop_toBottomOf="@+id/bg_view"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>