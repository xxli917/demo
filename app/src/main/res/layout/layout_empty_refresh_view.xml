<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="130dp"
    android:background="@color/white"
    android:id="@+id/error_net_view"
    android:visibility="visible"
    >
    <ImageView
        android:id="@+id/empty_image"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@mipmap/ic_empty"
        />
    <TextView
        android:id="@+id/desc_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:layout_marginTop="@dimen/m4"
        android:textSize="14sp"
        android:textColor="@color/color_909BAD"
        />

    <TextView
        android:id="@+id/reload_view"
        android:layout_width="130dp"
        android:layout_height="@dimen/dp44"
        android:text="重新加载"
        android:background="@drawable/grey_line_rect"
        android:layout_marginTop="100dp"
        android:textColor="@color/color_5F6879"
        android:textSize="16sp"
        android:gravity="center"

        />

</LinearLayout>